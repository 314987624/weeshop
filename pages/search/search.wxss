/* search.wxss */
page{
  background: #f4f4f4;
}

.search{
  width: 100%;
  height: 150rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .form{
  height: 60rpx;
  width: 690rpx;
  background: #f4f4f4;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .input{
  height: 40rpx;
  width: 600rpx;
}

.search .btn{
  height: 40rpx;
  width: 40rpx;
}

.keywords{
  margin-top: 20rpx;
  background: #f4f4f4;
}

.keywords .item{
  margin-bottom: 20rpx;
  background: #fff;
}

.keywords .item .a{
  display:block;
  float:left;
  font-size:12px;
  color:#666;
  margin:0 10rpx 20rpx 10rpx;
  border:1px solid #ccc;
  padding:10rpx 20rpx;
  background:#fff;
}

.search-header {
  display: block;
  width: 92%;
  height: 44px;
  overflow: hidden;
  color: #404245;
  font-size: 15px;
  font-weight: normal;
  line-height: 44px;
  text-align: left;
  box-sizing: border-box;
  border: none;
  margin: 10px 4%;
}