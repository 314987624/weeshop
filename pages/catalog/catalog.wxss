/* catalog.wxss */

page {
  background: #f4f4f4;
  height: 100%;
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.search {
  width: 100%;
  height: 50px;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .form {
  height: 60rpx;
  width: 690rpx;
  background: #f4f4f4;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .input {
  height: 40rpx;
  width: 600rpx;
}

.search .btn {
  height: 40rpx;
  width: 40rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.catalog {
  margin-top: 1px;
  width: 100%;
  flex: 1;
  position: relative;
}

.catalog .nav_left {
  width: 30%;
  text-align: center;
  background: #f4f4f4;
}

.catalog .nav_left .nav_left_content {
  height: auto;
}

.catalog .nav_left .left_item {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #dedede;
  font-size: 12px;
}

.catalog .nav_left .left_item.active {
  background: #fff;
  border-left: 4px solid #333;
}

.catalog .nav_right {
  position: absolute;
  top: 0;
  right: 0;
  width: 70%;
  background: #fff;
  box-sizing: border-box;
  border-left: 1px solid #dedede;
}

.catalog .nav_right .nav_right_content {
  height: auto;
}

.catalog .nav_right .nav_right_content .right_item {
  height: 40px;
  line-height: 40px;
  text-align: center;
  border-bottom: 1px solid #dedede;
  font-size: 12px;
}
