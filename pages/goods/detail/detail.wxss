  height: 750rpx;
}

.goodsimgs image{
  width: 750rpx;
  height: 750rpx;
}

.goods-info{
    width: 750rpx;
    height: auto;
    overflow: hidden;
    background: #fff;
}

.goods-info .c{
    display: block;
    width: 718.75rpx;
    height: 100%;
    margin-left: 31.25rpx;
    padding: 38rpx 31.25rpx 38rpx 0;
}

