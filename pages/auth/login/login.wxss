/* login.wxss */
page, .container{
  height: 100%;
  background: #fff;
}

.login{
  padding: 0 30rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
  background: #fff;
}
.login .login-logo {
  width: 100%;
  margin: 80rpx auto;
  text-align: center;
}
.login .login-logo .icon{
  width: 320rpx;
  height: 320rpx;
}
.login .input-item{
  width: 690rpx;
  height: 68rpx;
  border: 1px solid #e6e6e6;
  margin: 40rpx 0;
  padding-left: 20rpx;
  line-height: 68rpx;
  font-size: 14px;
  color: #666;
}

.login .submit-btn {
  display: flex;
  margin-top: 40rpx;
  border-radius: 64rpx;
  overflow: hidden;
}
.login .btn-item{
  flex-basis: 40%;
  background: #CD3232;
  background-image: linear-gradient(-90deg,#CD3232 0%,rgb(255, 61, 61) 100%);
  text-align: center;
  font-size: 14px;
  color: #fff;
  border-radius: 0;
  border: none;
  transition: all 0.25s linear;
}
.login .btn-item.btn-item-wx {
  flex-basis: 60%;
  background:#65CD32;
  background-image: linear-gradient(90deg,#65CD32 0%, rgb(126, 255, 61) 100%);
  position: relative;
  overflow:visible;
  transition: all 0.25s linear;
}
.login .submit-btn:focus .btn-item,.login .submit-btn:active .btn-item{
  flex-basis: 25%;
}
.login .submit-btn:focus .btn-item.btn-item-wx,.login .submit-btn:active .btn-item.btn-item-wx{
  flex-basis: 75%;
}
.login .btn-item .icon {
  width: 64rpx;
  height: 64rpx;
  position: absolute;
  top: 0;
  left: -32rpx;
  z-index: 1;
}
.login .link-item{
  margin-top: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  font-size: 12px;
}

.login .link-item .l{
  float: left;
}

.login .link-item .r{
  float: right;
}